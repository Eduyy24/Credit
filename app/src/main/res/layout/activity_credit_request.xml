<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".creditRequest.CreditRequestActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginHorizontal="20dp"
        card_view:contentPaddingLeft="10dp"
        card_view:contentPaddingRight="10dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de crédito"
                android:textSize="15dp"
                android:layout_marginVertical="10dp"
                />

            <RadioGroup
                android:id="@+id/radio_group_opc_cred"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_libre_inversion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:text="Libre inversión"

                    />

                <RadioButton
                    android:id="@+id/radio_compra_cartera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compra de cartera"
                    />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plazo"
                android:textSize="15dp"
                android:layout_marginVertical="10dp"
                />

            <EditText
                android:id="@+id/editTextPlazo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monto"
                android:textSize="15dp"
                android:layout_marginVertical="10dp"
                />

            <EditText
                android:id="@+id/editTextMonto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Información finaciera"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresos"
                android:textSize="15dp"
                android:layout_marginVertical="10dp"
                />

            <EditText
                android:id="@+id/editTextIngresos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gastos"
                android:textSize="15dp"
                android:layout_marginVertical="10dp"
                />

            <EditText
                android:id="@+id/editTextGastos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                />

            <Button
                android:id="@+id/buttonSolicitar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solicitar"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>